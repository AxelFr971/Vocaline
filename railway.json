{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
    // No global buildCommand here. Builds are now fully managed within each service.
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm run start:backend",
    "healthcheckPath": "/",
    "healthcheckTimeout": 5000
  },
  "environment": {
    "PORT": "8080",
    "NODE_ENV": "production"
  },
  "services": [
    {
      "name": "vocaline-backend",
      "path": "vocaline-backend",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cp package.json /tmp/package.json && cp package-lock.json /tmp/package-lock.json && cd /tmp && npm install --omit=dev && cp -r node_modules /app/vocaline-backend/"
      },
      "deploy": {
        "startCommand": "node server.js",
        "healthcheckPath": "/",
        "healthcheckTimeout": 5000
      }
    },
    {
      "name": "vocaline-frontend",
      "path": "vocaline-frontend",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install --omit=dev && npm run build"
      },
      "deploy": {
        "startCommand": "serve -s build",
        "healthcheckPath": "/"
      },
      "dependsOn": ["vocaline-backend"]
    }
  ]
}