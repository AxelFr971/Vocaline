{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd vocaline-backend && npm install --production && cd ../vocaline-frontend && npm install --production && npm run build"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm run start:backend",
    "healthcheckPath": "/",
    "healthcheckTimeout": 5000
  },
  "environment": {
    "PORT": "8080",
    "NODE_ENV": "production"
  },
  "services": [
    {
      "name": "vocaline-backend",
      "path": "vocaline-backend",
      "deploy": {
        "startCommand": "node server.js",
        "healthcheckPath": "/",
        "healthcheckTimeout": 5000
      }
    },
    {
      "name": "vocaline-frontend",
      "path": "vocaline-frontend",
      "deploy": {
        "startCommand": "serve -s build",
        "healthcheckPath": "/"
      },
      "dependsOn": ["vocaline-backend"]
    }
  ]
}